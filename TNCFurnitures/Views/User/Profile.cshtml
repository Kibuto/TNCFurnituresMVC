@model TNCFurnitures.Models.NGUOIDUNG

@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="margin-left:5rem; margin-right:5rem; margin-top:9rem; border-bottom:2px solid #f6f6f8">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <h2 style="padding-left:3rem;">Profile</h2>
        <div class="form-horizontal">
            <p class="text-center" style="color: red">@ViewBag.Thongbao</p>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MaND)

            <div class="form-group">
                <label class="control-label col-md-1">Name</label>
                <div class="col-md-11">
                    @Html.EditorFor(model => model.TenND, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenND, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-1">Address</label>
                <div class="col-md-11">
                    @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-1">Phone</label>
                <div class="col-md-11">
                    @Html.EditorFor(model => model.DienThoai, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DienThoai, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-1">Birthday</label>
                <div class="col-md-11">
                    <input class="form-control" value="@String.Format("{0:dd/MM/yyyy}", @Model.NgaySinh)" />
                    @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="margin-top:3rem; margin-left:5rem;">
                <div class="col-lg-11">
                    <input type="submit" value="Save" class="btn btn-success text-uppercase" style="padding:1rem 2rem; font-weight:500" />
                </div>
            </div>
        </div>
    }
</div>